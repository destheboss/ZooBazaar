@page
@model WEB.Pages.ProfileModel
@{
}

<h1 class="display-6 text-dark mt-2 mb-0">Profile Information</h1>
<hr class="text-dark">

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-lg-6 mb-4 mb-lg-0">
            <div class="round card mb-3 text-light">
                <div class="round card-body green">
                    <div class="row g-0">
                        <div class="card-body p-4">
                            <h4>Information</h4>
                            <hr class="mt-0 mb-4">
                            <div class="row pt-1">
                                <div class="col-6 mb-3">
                                    <h5>First Name</h5>
                                    <p>@Model.Emp.FirstName</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h5>Last Name</h5>
                                    <p>@Model.Emp.LastName</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h5>Email</h5>
                                    <p>@Model.Emp.Email</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h5>Phone</h5>
                                    <p>@Model.Emp.PhoneNumber</p>
                                </div>
                            </div>
                            <h4>Address</h4>
                            <hr class="mt-0 mb-4">
                            <div class="row pt-1">
                                <div class="col-6 mb-3">
                                    <h5>City</h5>
                                    <p>@Model.Emp.City</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h5>Street</h5>
                                    <p>@Model.Emp.Street</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h5>Postcode</h5>
                                    <p>@Model.Emp.ZipCode</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h5>House Num</h5>
                                    <p>@Model.Emp.HouseNumber</p>
                                </div>
                            </div>
                            <hr class="mt-0 mb-4">
                            <div class="row pt-1">
                                <div class="col-6 mb-3">
                                    <h5>Role</h5>
                                    <p>@Model.Emp.Role</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h5>Wage</h5>
                                    <p>@Model.Emp.Wage</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h5>BSN</h5>
                                    <p>@Model.Emp.Bsn</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h5>Birth Date</h5>
                                    <p>@Model.Emp.BirthDate</p>
                                </div>
                            </div>
                            <hr class="mt-0 mb-4">
                            <form method="post">
                                <button type="submit" class="btn btn-outline-light btn-lg">Log Out</button>
                            </form>
                            <a asp-page="/ProfileUpdate" class="btn btn-outline-light">Update Profile</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>